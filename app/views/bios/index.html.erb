<p id="notice"><%= notice %></p>

<h1>Listing Bios</h1>

<%= form_for_filterrific @filterrific do |f| %>
  <div>
    Name Search
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parish</th>
      <th>Entered service</th>
      <th>Dates</th>
      <th>Place of birth</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><%= link_to bio.formatted_name, postings_path({bio_id: bio.id}) %></td>
        <td><%= bio.parish %></td>
        <td><%= bio.entered_service %></td>
        <td><%= bio.dates %></td>
        <td><%= bio.place_of_birth %></td>
        <td><%= bio.notes %></td>
        <td><%= link_to 'Edit', edit_bio_path(bio) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
